@model CareerProject.Models.AccountView.UserViewModel

@{

    ViewBag.Title = "Edit User";

}
<div class="form-container">
    <form class="form" asp-action="Edit" asp-controller="Admin" method="post">
        <div class="form-group">
            <label for="Name">FirstName</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" />
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
        </div>
        <div class="form-group">
            <label for="Role">Role</label>

            @Html.DropDownListFor(

                     x => x.Role,

                     Model.Roles,

                     "Select a role",

                     new { @id = "Role", @class = "form-control" })
        </div>
        <div class="form-group btnTop">
            <button type="submit" class="btn btn-primary custom-button">Update</button>
        </div>
    </form>
</div>


