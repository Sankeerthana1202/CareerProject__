@model IEnumerable<CareerProject.Models.AccountView.UserViewModel>

@{
    ViewBag.Title = "Manage Users";
}
<br />
<h2>List of Users</h2>
<br />
@if (Model != null && Model.Any())
{
    <div>
        <table class="table table-striped table-bordered">
            <thread>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>

                </tr>

            </thread>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Admin" asp-route-email="@user.Email" class="btn btn-primary custom-button">Edit</a>
                            <a asp-action="Delete" asp-controller="Admin" asp-route-email="@user.Email" class="btn btn-primary custom-button">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>


       


    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        No users found
    </div>
}